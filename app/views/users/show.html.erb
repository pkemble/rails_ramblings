<%= gravatar_for @user %>
<%= @user.username %>
<div class="row">
  <div class="col-md-12">
    <table class="qr">
      <% @qr.modules.each_index do |x| %>
          <tr>
            <% @qr.modules.each_index do |y| %>
                <% if @qr.qrcode.checked?(x,y) %>
                    <td class="black"/>
                <% else %>
                    <td class="white"/>
                <% end %>
            <% end %>
          </tr>
      <% end %>
    </table>
  </div>
</div>